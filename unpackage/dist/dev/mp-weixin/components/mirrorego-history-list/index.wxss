.history-list {
  height: 100%;
  position: relative;
  font-family: PingFang SC;
  font-weight: 400;
  overflow-y: auto;
}
.history-list .filter-box {
  font-size: 28rpx;
  font-weight: 400;
  color: #FE8151;
  line-height: 36rpx;
  display: flex;
  margin-bottom: 14rpx;
}
.history-list .filter-box text {
  margin-right: 10rpx;
}
.history-list .filter-box image {
  width: 32rpx;
  height: 32rpx;
  margin: auto 0;
}
.history-list .task-type-selection {
  position: absolute;
  top: 48rpx;
  left: 0;
  z-index: 2;
  background: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 0 8px 0 rgba(232, 237, 250, 0.6), 0 2px 4px 0 rgba(232, 237, 250, 0.5);
}
.history-list .task-type-selection .type-item {
  border-bottom: 1rpx solid #e6e6e6;
  padding: 20rpx 0;
  color: #333;
  font-size: 26rpx;
}
.history-list .task-type-selection .type-item.is-active {
  color: #FE8151;
  border-color: #FE8151;
}
.history-list .task-type-selection .type-item:nth-last-child(1) {
  border-bottom: 0;
}
.history-list .list-box {
  padding-top: 10rpx;
  padding-bottom: 50rpx;
}
.history-list .list-box .list-item {
  box-sizing: border-box;
  width: 100%;
  margin: 32rpx 0;
  display: flex;
}
.history-list .list-box .list-item .date-box {
  width: 130rpx;
  min-width: 130rpx;
  margin: auto 0;
  color: #303030;
  font-size: 24rpx;
}
.history-list .list-box .list-item .date-box .week .day {
  font-size: 32rpx;
  margin-right: 10rpx;
}
.history-list .list-box .list-item .date-box .date {
  margin-top: 10rpx;
}
.history-list .list-box .list-item .item-container {
  width: calc(100% - 130rpx);
  border-radius: 16rpx;
  background: #fff;
  padding: 17rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}
.history-list .list-box .list-item .item-container .special-info {
  display: flex;
}
.history-list .list-box .list-item .item-container .special-info .content-box {
  flex: 1 1 auto;
  max-width: 100%;
  width: calc(100% - 136rpx);
}
.history-list .list-box .list-item .item-container .special-info .content-box .title {
  font-size: 32rpx;
  color: #303030;
  line-height: 48rpx;
}
.history-list .list-box .list-item .item-container .special-info .content-box .des {
  font-size: 26rpx;
  color: #666;
  line-height: 42rpx;
  margin: 8rpx 0 4rpx 0;
}
.history-list .list-box .list-item .item-container .special-info .content-box .time {
  font-size: 24rpx;
  color: #ABB3BB;
  line-height: 40rpx;
}
.history-list .list-box .list-item .item-container .special-info image {
  width: 136rpx;
  height: 136rpx;
  margin-left: 15rpx;
  border-radius: 16rpx;
}
.history-list .list-box .list-item .item-container .operate-box {
  margin-top: 20rpx;
}
.history-list .list-box .list-item .item-container .operate-box .custom-title {
  font-size: 24rpx;
  color: #666666;
  line-height: 36rpx;
}
.history-list .list-box .list-item .item-container .operate-box .operate {
  display: flex;
  justify-content: flex-end;
}
.history-list .list-box .list-item .item-container .operate-box .operate image {
  width: 32rpx;
  height: 32rpx;
  margin: auto 18rpx;
  margin-right: 0;
}
.history-list .empty-box {
  display: flex;
  flex-direction: column;
}
.history-list .empty-box image {
  width: 170rpx;
  height: 167rpx;
  margin: 270rpx auto 0 auto;
}
.history-list .empty-box .text {
  font-size: 30rpx;
  font-weight: 300;
  color: #666666;
  margin: 50rpx auto;
}
.history-list .popup-content {
  background: #fff;
  width: 560rpx;
  height: 192rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-radius: 21rpx 21rpx 0 0;
}
.history-list .popup-content text {
  margin: 5rpx auto;
}
.history-list .popup-operate-box {
  display: flex;
}
.history-list .popup-operate-box button {
  width: 50%;
  border: 0;
  border-radius: 0;
  font-size: 32rpx;
  border-radius: 0 0 0 21rpx;
  background: #fff;
  border-top: 1px solid #eee;
}
.history-list .popup-operate-box button::after {
  display: none;
}
.history-list .popup-operate-box button.cancel {
  color: #FF8F1F;
  border-radius: 0 0 21rpx 0;
  border-left: 1px solid #eee;
}

