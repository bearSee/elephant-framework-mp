.task-list {
  height: 100%;
  position: relative;
  font-family: PingFang SC;
  overflow-y: auto;
}
.task-list .filter-box {
  font-size: 28rpx;
  font-weight: 400;
  color: #FE8151;
  line-height: 36rpx;
  display: flex;
  margin-bottom: 14rpx;
}
.task-list .filter-box text {
  margin-right: 10rpx;
}
.task-list .filter-box image {
  width: 32rpx;
  height: 32rpx;
  margin: auto 0;
}
.task-list .task-type-selection {
  position: absolute;
  top: 48rpx;
  left: 0;
  z-index: 2;
  background: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 0 8px 0 rgba(232, 237, 250, 0.6), 0 2px 4px 0 rgba(232, 237, 250, 0.5);
}
.task-list .task-type-selection .type-item {
  border-bottom: 1rpx solid #e6e6e6;
  padding: 20rpx 0;
  color: #333;
  font-size: 26rpx;
}
.task-list .task-type-selection .type-item.is-active {
  color: #FE8151;
  border-color: #FE8151;
}
.task-list .task-type-selection .type-item:nth-last-child(1) {
  border-bottom: 0;
}
.task-list .list-box {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-bottom: 50rpx;
}
.task-list .list-box .list-item {
  box-sizing: border-box;
  width: calc(50% - 10rpx);
  margin: 24rpx 0;
}
.task-list .list-box .list-item .image-cover {
  width: 336rpx;
  height: 190rpx;
}
.task-list .list-box .list-item .title-box {
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 36rpx;
}
.task-list .list-box .list-item .title-box .title {
  margin: 20rpx 0 12rpx 0;
  font-size: 32rpx;
  color: #333333;
}
.task-list .list-box .list-item .title-box .des {
  font-size: 24rpx;
  color: #B3B3B3;
}
.task-list .empty-box {
  display: flex;
  flex-direction: column;
}
.task-list .empty-box image {
  width: 170rpx;
  height: 167rpx;
  margin: 270rpx auto 0 auto;
}
.task-list .empty-box .text {
  font-size: 30rpx;
  font-weight: 300;
  color: #666666;
  margin: 50rpx auto;
}

