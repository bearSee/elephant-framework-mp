.write-detail {
  padding: 30rpx 54rpx 230rpx 54rpx;
  font-family: Gen Jyuu Gothic-Regular, Gen Jyuu Gothic;
  font-weight: 400;
}
.write-detail .special-content {
  display: flex;
}
.write-detail .special-content .date-box {
  width: 140rpx;
  min-width: 140rpx;
  color: #303030;
  font-size: 26rpx;
}
.write-detail .special-content .date-box .week .day {
  font-size: 36rpx;
  margin-right: 10rpx;
}
.write-detail .special-content .date-box .date {
  margin-top: 10rpx;
}
.write-detail .special-content .title-box {
  width: calc(100% - 140rpx);
  margin-top: 3rpx;
}
.write-detail .special-content .title-box .title {
  font-size: 32rpx;
  color: #303030;
  line-height: 48rpx;
  margin-bottom: 6rpx;
}
.write-detail .special-content .title-box .title-des {
  font-size: 28rpx;
  color: #666666;
  line-height: 42rpx;
}
.write-detail .write-content {
  margin-top: 52rpx;
}
.write-detail .write-content .title {
  font-size: 40rpx;
  color: #333333;
  line-height: 56rpx;
}
.write-detail .write-content .time {
  font-size: 24rpx;
  color: #ABB3BB;
  line-height: 40rpx;
}
.write-detail .write-content .content {
  margin: 36rpx 0 50rpx 0;
}
.write-detail .write-content .images .image {
  width: 100%;
}
.write-detail .reply-box {
  display: flex;
}
.write-detail .reply-box .avatar {
  width: 100rpx;
  height: 100rpx;
  margin: auto 0;
  margin-right: 60rpx;
}
.write-detail .reply-box .reply-content {
  width: calc(100% - 154rpx);
  margin-top: 60rpx;
  font-family: HarmonyOS Sans SC-Regular, HarmonyOS Sans SC;
}
.write-detail .reply-box .reply-content .title {
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  line-height: 36rpx;
}
.write-detail .reply-box .reply-content .content {
  margin-top: 30rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #646464;
  line-height: 36rpx;
}
.write-detail .write-footer {
  width: 100%;
  height: 160rpx;
  box-shadow: 0px -5px 7px 0px rgba(216, 216, 216, 0.5);
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
}
.write-detail .write-footer .button-list {
  display: flex;
  justify-content: center;
  height: 100%;
}
.write-detail .write-footer .button-list button {
  width: 280rpx;
  height: 68rpx;
  line-height: 68rpx;
  background: #FF8151;
  font-size: 28rpx;
  font-family: Nunito Sans-SemiBold, Nunito Sans;
  font-weight: 600;
  color: #FFFFFF;
  margin: auto 31rpx;
  text-align: center;
  border-radius: 50rpx;
}
.write-detail .write-footer .button-list image {
  width: 39rpx;
  height: 42rpx;
  margin: auto 75rpx;
}

